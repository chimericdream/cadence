{{> layout/header }}

<h1 class="page-header">Plugin Configuration</h1>

<h2>{{ plugin.name }}</h2>

{{#if showSavedMsg}}
<div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true"><i class="fa fa-times" aria-hidden="true"></i></span>
    </button>
    Account information saved.
</div>
{{/if}}

<form action="/plugins/{{ plugin.id }}/{{#if account.id }}{{ account.id }}{{ else }}add-account{{/if}}/" method="post">
    <div class="form-group row">
        <label for="account-id" class="col-sm-2 col-form-label">Account ID</label>
        <div class="col-sm-10">
            <input name="account-id" type="text" id="account-id" class="form-control" value="{{ account.id }}">
            <small class="form-text text-muted">Something easy to remember, like your username.</small>
        </div>
    </div>
{{#each fields}}
    <div class="form-group row">
        <label for="config--{{ @key }}" class="col-sm-2 col-form-label">{{ name }}</label>
        <div class="col-sm-10">
            {{#equal type "select"}}
                <select name="{{ @key }}" id="config--{{ @key }}" class="form-control"{{#equal selection "multiple"}} multiple{{/equal}}>
                    {{#each options}}
                        <option value="{{ value }}"{{#contains (getFrom ../../account.fields @../key) value}} selected{{/contains}}>{{ name }}</option>
                    {{/each}}
                </select>
            {{/equal}}
            {{#equal type "text"}}
                <input name="{{ @key }}" type="text" id="config--{{ @key }}" class="form-control" value="{{getFrom ../account.fields @key }}">
            {{/equal}}
        </div>
    </div>
{{/each}}
    <div class="row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary pull-left">Save</button>
            <button type="reset" class="btn btn-link pull-right">Reset</button>
        </div>
    </div>
</form>

{{> layout/footer }}
