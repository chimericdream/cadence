{{> layout/header }}

<h1 class="page-header">Bridges</h1>

<div class="row">
{{#each bridges}}
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card">
            <img class="card-img-top" src="/assets/images/logos/{{ @key }}.png" alt="{{ name }} logo">
            <div class="card-block">
                {{#if description }}
                    <p class="card-text">{{ description }}</p>
                    <hr>
                {{/if}}
                <div class="list-group list-group-condensed">
                    <span class="list-group-item disabled">Accounts</span>
                    {{#each accounts~}}
                        <a href="/admin/bridges/edit-account/{{ @../key }}/{{ @key }}/" class="list-group-item list-group-item-action">{{ name }}</a>
                    {{~else~}}
                        <span class="list-group-item">No accounts added.</span>
                    {{~/each}}
                </div>
            </div>
            <div class="card-footer">
                <a href="/admin/bridges/add-account/{{ @key }}/" class="btn btn-sm btn-primary"><i class="fa fa-cogs" aria-hidden="true"></i> Add Account</a>
                <a {{#if enabled}}style="display: none;" {{/if}}href="/admin/bridges/enable/{{ @key }}/" class="bridge-enable-button btn btn-sm btn-success"><i class="fa fa-check" aria-hidden="true"></i> Enable</a>
                <a {{#unless enabled}}style="display: none;" {{/unless}}href="/admin/bridges/disable/{{ @key }}/" class="bridge-disable-button btn btn-sm btn-danger"><i class="fa fa-ban" aria-hidden="true"></i> Disable</a>
            </div>
        </div>
    </div>
{{/each}}
</div>

{{> layout/footer }}
