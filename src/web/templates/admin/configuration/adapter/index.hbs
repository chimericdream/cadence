{{> layout/header }}

<h1 class="page-header">Adapter Configuration</h1>

<h2>{{ adapter.name }}</h2>

<form action="/admin/configuration/{{ adapter.config-path }}/" method="post">
{{#each config}}
    <div class="form-group row">
        <label for="config--{{ @key }}" class="col-sm-2 col-form-label">{{ name }}</label>
        <div class="col-sm-10">
            {{#equal type "select"}}
                <select name="{{ @key }}" id="config--{{ @key }}" class="form-control"{{#equal selection "multiple"}} multiple{{/equal}}>
                    {{#each options}}
                        <option{{#contains ../value this}} selected{{/contains}}>{{ this }}</option>
                    {{/each}}
                </select>
            {{/equal}}
            {{#equal type "text"}}
                <input name="{{ @key }}" type="text" id="config--{{ @key }}" class="form-control" value="{{ value }}">
            {{/equal}}
        </div>
    </div>
{{/each}}
    <div class="row">
        <div class="btn-group col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="reset" class="btn btn-warning">Reset</button>
        </div>
    </div>
</form>

{{> layout/footer }}
